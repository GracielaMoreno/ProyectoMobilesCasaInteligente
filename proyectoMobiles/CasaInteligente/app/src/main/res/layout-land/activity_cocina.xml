<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".cocina">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Cocina"
            android:textColor="@color/colorAccent"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="191dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="253dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="171dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="74dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="Foco"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="72dp"
                    tools:layout_editor_absoluteY="174dp" />


                <ImageView
                    android:id="@+id/imageFoco"
                    android:layout_width="140dp"
                    android:layout_height="94dp"
                    android:onClick="abrirMenuFoco"
                    app:srcCompat="@drawable/foco"
                    tools:layout_editor_absoluteX="208dp"
                    tools:layout_editor_absoluteY="133dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="ToggleButton" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="137dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cortinas"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageCortina"
                    android:layout_width="103dp"
                    android:layout_height="118dp"
                    android:layout_gravity="center"
                    android:onClick="abrirMenuCortina"
                    app:srcCompat="@drawable/cortina" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="ToggleButton" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>