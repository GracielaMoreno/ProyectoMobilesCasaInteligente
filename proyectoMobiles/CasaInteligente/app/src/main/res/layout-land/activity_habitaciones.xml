<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="290dp"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:gravity="center"
    android:background="@color/color1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="HabitaciÃ³n"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:layout_marginTop="25dp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="37dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="252dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="144dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:text="Foco"
                    android:textSize="24sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="189dp" />

                <ImageView
                    android:id="@+id/imageViewhaboitacionfoco"
                    android:layout_width="101dp"
                    android:layout_height="99dp"
                    android:onClick="abrirMenuFocoHabitacion"
                    app:srcCompat="@drawable/foco"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="187dp"
                    tools:layout_editor_absoluteY="165dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/toggleButtonhabfoto"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:checked="true"
                    android:textOff="Apagado"
                    android:textOn="Encendido"
                    android:text="ToggleButton" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="199dp"
                android:layout_height="147dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="71dp"
                    android:layout_height="32dp"
                    android:text="Puerta"
                    android:textSize="24sp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageViewPuertaHab"
                    android:layout_width="100dp"
                    android:layout_height="112dp"
                    android:onClick="abrirPuertaHabitacion"
                    app:srcCompat="@drawable/puerta" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/toggleButtonPuerta"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:checked="true"
                    android:gravity="center"
                    android:textOff="Cerrada"
                    android:textOn="Abierta"
                    android:text="ToggleButton" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>