<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MenÃº"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="36sp"

            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="297dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="57dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:text="Cocina"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageCocina"
                android:layout_width="113dp"
                android:layout_height="88dp"
                android:layout_margin="10dp"
                android:onClick="pantallaCocina"
                app:srcCompat="@drawable/cocina1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="94dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="Habitacion"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageHabitacion"
                android:layout_width="95dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:onClick="pantallaHabitacion"
                app:srcCompat="@drawable/cama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="278dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="57dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:text="Sala"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="157dp" />

            <ImageView
                android:id="@+id/imageSala"
                android:layout_width="98dp"
                android:layout_height="93dp"
                android:layout_margin="10dp"
                android:onClick="pantallaSala"
                app:srcCompat="@drawable/sala" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="60dp"
                android:layout_height="21dp"
                android:layout_margin="10dp"
                android:text="Alarma"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="108dp" />

            <ImageView
                android:id="@+id/imageAlarma"
                android:layout_width="102dp"
                android:layout_height="82dp"
                android:layout_margin="10dp"
                android:onClick="pantallaAlarma"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/alarma" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageAyuda"
            android:layout_width="90dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:onClick="pantallaAyuda"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/eventos" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:text="Historial Eventos"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="108dp" />
    </LinearLayout>
</LinearLayout>
